@using Microsoft.Extensions.Localization
@using BlazorApp.Locales;
@using System.Globalization
@inject IStringLocalizer<Resources> localizer
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        @Body
    </main>

    <!-- Footer -->
    <section class="container-fluid bg-black ">
        <footer class="container-md custom-pad py-3 d-flex flex-wrap justify-content-between align-items-center" style="color: white;">
          <span class="mb-md-0">@localizer["Footer_Copy"]</span>
          <ul class="d-flex nav justify-content-end list-unstyled">
            <li><a href="/policy" class="text-light me-3">@localizer["Footer_Privacy"]</a></li>
            <li><a href="/terms" class="text-light">@localizer["Footer_Terms"]</a></li>
          </ul>
        </footer>
    </section>
</div>