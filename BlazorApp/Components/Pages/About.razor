@page "/about"
@using Microsoft.Extensions.Localization
@using BlazorApp.Locales;
@using System.Globalization
@inject IStringLocalizer<Resources> localizer

<PageTitle>@localizer["NavBar_About"]</PageTitle>

    <!-- Header -->
    <section class="container-fluid header" >
        <h4 style="color: white;">@localizer["NavBar_About"]</h4>
    </section>

    <!-- Philosophy -->
    <section class="container-md py-lg-5 py-4 py-3 custom-pad">
        <div class="row row-cols-1 row-cols-lg-2">
            <div class="col pe-lg-4 d-flex justify-content-center align-items-center"><img src="/assets/logikco logo.png" alt="Logikco logo" style="width: 300px; height: 5rem;"></div>
            <div  class="col ps-lg-4">
                <h4>@localizer["About_Phil_Title"]</h4>
                <p>
                    @localizer["About_Phil_P"]
                    @* At LogiKCo, we believe providing the right solutions for our customers is the number one priority. That means having a clear understanding of our customers’ needs. For every project we take on, our team of project managers, business analysts, and developers create a unique project plan package consisting of a document repositories, regular timeline updates, and numerous task management lists tracked and shared between project team members. 
                    <br/>
                    In-person and remote training sessions as well as personal customer support are a given. Whether we’re delivering a custom solution, integrating systems, or supporting network infrastructure, our customer’s satisfaction is always our priority. *@
                </p>
            </div>
        </div>
    </section>

    <!-- Certificate -->
    <div style="background-color: #F5F5F5;">
        <section class="container-md py-lg-5 py-4 custom-pad">
            <h4>@localizer["About_Certificate"]</h4>
            <div class="row row-cols-2 row-cols-lg-4">
                <div class="col"><img src="/assets/logikco logo.png" alt="" ></div>
                <div class="col"><img src="/assets/logikco logo.png" alt="" ></div>
                <div class="col"><img src="/assets/logikco logo.png" alt="" ></div>
                <div class="col"><img src="/assets/logikco logo.png" alt="" ></div>
            </div>
        </section>
    </div>

    <!-- Content -->
